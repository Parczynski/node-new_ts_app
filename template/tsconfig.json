{
	"compilerOptions": {
		"outDir": "./build",
		"target": "es2017",
		"module": "CommonJS",
		"declaration": false,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"lib": ["ES2021.String"],
		"types": ["node", "jest"]
	},
	"include": ["src"],
	"typeRoots": [" ./global.d.ts"],
	"exclude": ["node_modules"]
}
